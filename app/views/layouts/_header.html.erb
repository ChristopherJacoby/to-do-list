<header>
  <nav class="grid bg-slate-200 grid-cols-3">
    <%= link_to image_tag("post-it.png"), root_path, class: "ml-2" %>
    <div class="flex grid justify-items-center items-center">
      <%= link_to "Add New Task", new_task_path %>
    </div>
    <div class="flex gap-4 justify-end items-center mr-4">
      <% if current_user %>
        <%= link_to current_user.username, current_user %>
        <%= button_to "Sign Out", session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign Up", signup_path %>
        <%= link_to "Sign In", new_session_path %>
      <% end %>
    </div>
  </nav>
</header>
