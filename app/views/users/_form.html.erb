<div class="flex justify-center w-120">
  <%= form_with(model: user) do |f| %>
    <%= render 'shared/error', object: user %>
    <div class="flex grid grid-cols-1">
      <div class="mb-8 grid">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="mb-8 grid">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="mb-8 grid">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="mb-8 grid">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="flex grid items-center justify-items-center">
        <%= f.submit class: "bg-blue-300 w-40 m-4 font-bold rounded" %>
      </div>
    </div>
  <% end %>
</div>
