<section class="m-4 grid flex justify-items-center items-center rounded shadow">
  <ul>
    <li><%= @task.name %></li>
    <li><%= @task.room %></li>
    <li><%= @task.allowance %></li>
    <li><%= @task.assigned %></li>
  </ul>

<!--  <button class="bg-green-200 rounded m-4 p-2" >COMPLETE</button> add onclick Task.complete to run here-->
  <%= link_to 'EDIT', edit_task_path, class: "rounded bg-blue-200 mb-4 p-2" %>
  <%= link_to 'DELETE', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" },
              class: "rounded bg-red-200 mb-4 p-2"
  %>
</section>
