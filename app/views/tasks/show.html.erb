<div class="content grid flex justify-center">
  <section class="flex justify-center rounded shadow w-80 h-80 bg-yellow-200">
    <ul>
      <li class = 'text-2xl font-bold mb-10 flex justify-center'><%= @task.name %></li>
      <li class = 'text-xl italic mb-40'><%= @task.room %></li>
      <li><%= @task.allowance %></li>
      <li class = 'text-xl font-bold flex justify-center'><%= @task.assigned %></li>
    </ul>
  </section>
  <section class="flex justify-center">
    <%= link_to 'COMPLETE', task_path, class: "rounded bg-green-200 m-4 p-2" %>
    <%= link_to 'EDIT', edit_task_path, class: "rounded bg-blue-200 m-4 p-2" %>
    <%= link_to 'DELETE', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" },
                class: "rounded bg-red-200 m-4 p-2" %>
  </section>
</div>
